extends ../layout/common.pug
block content

    h1 Login
    if errors
        each error in errors
            .alert.alert-danger=error

    form(method="POST")
            .form-group
                label(for="userName") User Name
                input#userName.form-control(type="text", name="userName", value = values ? values.userName : '')
                    
            .form-group
                lablel(for="password") password
                input#password.form-control(type="password", name="password", value = values ? values.password : '')
                    
            button.btn.btn-primary Login