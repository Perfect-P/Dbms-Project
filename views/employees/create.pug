extends ../layout/common.pug
block content

	h1 Create Employee

	if errors
		each error in errors
			.alert.alert-danger=error


	form(action="/employees/create", method="POST")
		.form-group
			label(for="id") ID
			input#id.form-control(type="text", name="id")

		.form-group
			label(for="name") Name
			input#name.form-control(type="text", name="name")

		.form-group
			lablel(for="address") Address
			input#address.form-control(type="text", name="address")

		.form-check.form-check-inline
			input#male.form-check-input.p-3(type='checkbox', name="gender", value ="M")
			label.form-check-label(for='male').p-3 Male
			input#female.form-check-input.p-3(type='checkbox', name="gender", value ="F")
			label.form-check-label.p-3(for='female') Female

		.form-group
			lablel(for="birthday") Birthday
			input#birthday.form-control(type="date", name="birthday")

		.form-group
			lablel(for="phone") Phone
			input#phone.form-control(type="text", name="phone")

		.form-group
			lablel(for="education") Education ID
			input#education.form-control(type="text", name="education")

		.form-group
			lablel(for="position") Position ID
			input#position.form-control(type="text", name="position")

		.input-group.mb-3
			.input-group-prepend
				label.input-group-text(for='inputGroupSelect01') Salary Level
				select#inputGroupSelect01.custom-select(name='salary')
					option(selected='') Choose...
					each sal in salary
						option(value=sal.sal_lvl)=sal.sal_lvl
				
	
											
		
		button.btn.btn-primary Create
