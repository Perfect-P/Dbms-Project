extends ../layout/common.pug
block content

	h1 Create Employee
	form(action="/employees/create", method="POST")
		.form-group
			label(for="id") ID
			input#id.form-control(type="text", name="id")

		.form-group
			label(for="name") Name
			input#name.form-control(type="text", name="name")

		.form-group
			lablel(for="address") Address
			input#address.form-control(type="text", name="address")

		.form-group.d-flex
			lablel(for="male") Male
			input#male.form-control(type="radio", name="gender", value ="M")
			lablel(for="female") Female
			input#female.form-control(type="radio", name="gender", value ="F")

		.form-group
			lablel(for="birthday") Birthday
			input#birthday.form-control(type="date", name="birthday")

		.form-group
			lablel(for="phone") Phone
			input#phone.form-control(type="text", name="phone")

		.form-group
			lablel(for="username") User Name
			input#username.form-control(type="text", name="username")

		lable Level Salary
		.dropdown
			button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
				| Levels
				each sal in salary
					.dropdown-menu(aria-labelledby='dropdownMenuButton')
						a.dropdown-item(name="sal_lvl",value=sal.sal_lvl)= sal.sal_lvl
		
		button.btn.btn-primary Create
