extends ../layout/common.pug
block content
	h1 Edit Employee

	each emp in emps
		form(action="/employees/"+emp.emp_id+"/edit", method="POST")
			.form-group
				label(for="name") Name
				input#name.form-control(type="text", name="name",value=emp.emp_name)

			.form-group
				lablel(for="address") Address
				input#address.form-control(type="text", name="address",value=emp.emp_address)

			.form-group
				if emp.emp_gender = 'M'
					lablel(for="male") Male
					input#male.form-control(type="radio", name="gender", value ="M",checked ='')
					lablel(for="female") Female
					input#female.form-control(type="radio", name="gender", value ="F")
				else if emp.emp_gender = 'F'
					lablel(for="male") Male
					input#male.form-control(type="radio", name="gender", value ="M")
					lablel(for="female") Female
					input#female.form-control(type="radio", name="gender", value ="F",checked='')

			.form-group
				lablel(for="birthday") Birthday
				input#birthday.form-control(type="text", name="birthday", value=emp.emp_dob)

			.form-group
				lablel(for="education") Education
				input#education.form-control(type="text", name="education", value=emp.edu_id)

			.form-group
				lablel(for="position") Position
				input#position.form-control(type="text", name="position", value=emp.pos_id)

			.form-group
				lablel(for="phone") Phone
				input#phone.form-control(type="text", name="phone",value=emp.emp_phone)
			.from-group
				label(for="salary") Salary
				.input-group.mb-3
					.input-group-prepend
						label.input-group-text(for='inputGroupSelect01') Salary level
					select#inputGroupSelect01.custom-select(name='salary')
						
						each sal in salary
							option(selected='',value=sal.sal_lvl)=sal.sal_lvl

			button Update
				