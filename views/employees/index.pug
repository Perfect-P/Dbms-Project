extends ../layout/common.pug
block content

	h1 employees

	form(action="/employees/search", method="GET")
		input(type="text", name="q")
		button(class="btn btn-primary ml-2") search
		
	table.table
		tr
			th Name
			th Address
		each emp in emps
			tr
				td=emp.name
				td=emp.address
				td=emp.id