extends ../layout/common.pug

block content

		div.row.mt-2
			h1.col-sm-2 Employee
			a.col-sm-1(href="/employees/create") New
			form.col-sm.form-inline.d-flex.justify-content-end(action="/employees/search", method="GET")
				input.form-control.mr-sm-2(type="text", name="q")
				button.btn.btn-outline-success(type='submit') Search
		
		

		table.table
			tr
				th Name
				th Address
				th ID
				th
			each emp in emps
				tr
					td=emp.emp_name
					td=emp.emp_address
					td=emp.emp_id
					td
						.from-group
							.dropdown
								button#dropdownMenuButton.btn.btn-outline-primary.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
									|	Option
								.dropdown-menu(aria-labelledby='dropdownMenuButton')
									a.dropdown-item(href="/employees/"+emp.emp_id) View
									a.dropdown-item(href="/employees/"+emp.emp_id+"/edit") Edit
									a.dropdown-item(href="/employees/"+emp.emp_id+"/delete") Delete
		
		nav(aria-label='Page navigation example')
			ul.pagination
				if n[0] > 1
					li.page-item
						a.page-link.text-primary(href='?page='+(n[0]-1).toString()) Previous
				each page in n
					li.page-item
						a.page-link.text-primary(href='?page='+ page)=page
				li.page-item
					a.page-link.text-primary(href='?page='+(current[0]+1).toString()) Next
								
									